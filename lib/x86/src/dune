;; -*- mode: lisp; -*-

(library
 (name act_x86)
 (public_name act.x86)
 (synopsis "Automagic Compiler Tormentor: x86 support")
 (inline_tests)
 (preprocess
  (pps ppx_deriving.std ppx_jane sedlex.ppx))
 (libraries ppx_inline_test.config ppx_expect.config ppx_expect.common
   sexplib0 base base.caml core_kernel fmt travesty travesty.base_exts
   travesty.containers menhirLib act.asm act.abstract act.common
   act.sanitiser act.language act.litmus act.utils sedlex plumbing)
 (flags :standard -w -39) ; Temporary; see https://github.com/ocaml-community/sedlex/pull/73
 )

(menhir
 (infer false)
 (flags "--table")
 (modules att_parser))

;; These rules generate the error message tables for each parser.
;; They're probably not as portable as they could be.

(rule
 (targets att_messages.ml)
 (action
  (with-stdout-to
   "%{targets}"
   (run "%{bin:menhir}" "--compile-errors" "%{dep:att.messages}"
     "att_parser.mly"))))
