;; -*- mode: lisp; -*-

(library
 (name act_x86)
 (public_name act.x86)
 (synopsis "Automagic Compiler Tormentor: x86 support")
 (inline_tests)
 (preprocess
  (pps ppx_deriving.std ppx_jane))
 (libraries base travesty travesty.base_exts menhirLib act_asm
   act_abstract act_sanitiser act_litmus act_utils))

(ocamllex
 (modules att_lexer))

(menhir
 (infer false)
 (flags "--table")
 (modules att_parser))

;; These rules generate the error message tables for each parser.
;; They're probably not as portable as they could be.

(rule
 (targets att_messages.ml)
 (action
  (with-stdout-to
   "%{targets}"
   (run "%{bin:menhir}" "--compile-errors" "%{dep:att.messages}"
     "att_parser.mly"))))
