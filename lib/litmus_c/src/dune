;; -*- mode: lisp; -*-

(library
 (name act_litmus_c)
 (public_name act.litmus_c)
 (synopsis "Automagic Compiler Tormentor: Litmus/C AST and frontend")
 (modules_without_implementation ast_basic_types ast_types)
 (preprocess
  (pps ppx_deriving.std ppx_jane ppx_yojson_conv ppx_accessor sedlex.ppx))
 (libraries sexplib0 stdio base base.caml core_kernel accessor accessor_base
   fmt menhirLib plumbing act.common yojson act.fir act.litmus act.utils
   sedlex travesty.base_exts))

(menhir
 (infer false)
 (flags "--table")
 (modules parser))

;; These rules generate the error message tables for each parser.
;; They're probably not as portable as they could be.

(rule
 (targets c_messages.ml)
 (action
  (with-stdout-to
   "%{targets}"
   (run "%{bin:menhir}" "--compile-errors" "%{dep:c.messages}" "parser.mly"))))
