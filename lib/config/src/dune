(library
 (name act_config)
 (public_name act.config)
 (synopsis
   "Automagic Compiler Tormentor: configuration and config file parsing")
 (preprocess
  (pps ppx_deriving.std ppx_jane sedlex.ppx))
 (libraries fmt fpath menhirLib travesty travesty.core_kernel_exts sedlex
   core_kernel act_common act_compiler act_litmus act_utils act_sanitiser
   act_machine)
 (flags :standard -w -39) ; Temporary; see https://github.com/ocaml-community/sedlex/pull/73
 )

;; Config file parser

(menhir
 (infer false)
 (flags "--table")
 (modules parser))

(rule
 (targets messages.ml)
 (action
  (with-stdout-to
   "%{targets}"
   (run "%{bin:menhir}" "--compile-errors" "%{dep:config.messages}"
     "parser.mly"))))
